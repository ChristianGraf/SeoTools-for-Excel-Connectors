      <Text Id="Query" Title="UserId" Debug.DefaultValue="12037949754@N01" Required="true"/>
    </Parameters>
    <Paging PageSize="200">
      <Parse>
        <JsonPath Id="PageNumber" Expr="photos.page"/>
      </Parse>
    </Paging>
    <Fetch Url="">
