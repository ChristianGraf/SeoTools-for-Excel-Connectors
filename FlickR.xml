<?xml version="1.0" encoding="utf-8" ?>
<Suite RequireVersion="5.2.6" Title="FlickR" Id="FlickR" SourceUrl="https://github.com/nielsbosma/SeoTools-for-Excel-Connectors/blob/master/Twitter.xml" HelpUrl="http://seotoolsforexcel.com/twitter/" HelpText="Documentation">

  <Author Name="Niels Bosma" Url="https://se.linkedin.com/in/bosmaniels"/>
  <Settings HelpText="What's this?" HelpUrl="http://seotoolsforexcel.com/twitter/">
    <Text Id="Key" Title="API Key" Required="true"/>
  </Settings>
 
  <RestConnector Id="PhotoSearch" Title="PhotoSearch">
    <Parameters>
      <Text Id="Query" Title="Search" Debug.DefaultValue="flowers" Required="true"/>
	  <Radio Id="Sorting" Title="Sorting" DefaultValue="date-posted-asc" Required="true">
		<DataSource>
		  <Item Id="relevance" Title="Relevance"/>
		  <Item Id="interestingness-desc" Title="Interestingness"/>
		  <Item Id="date-posted-desc" Title="Date Posted"/>
		  <Item Id="date-taken-desc" Title="Date Taken"/>
		</DataSource>
	  </Radio>
	  <Radio Id="MediaType" Title="MediaType" DefaultValue="photos" Required="true">
		<DataSource>
		  <Item Id="photos" Title="Photos"/>
		  <Item Id="videos" Title="Videos"/>
		</DataSource>
	  </Radio>  
	  
    </Parameters>
    <Paging PageSize="200">
      <Parse>
        <JsonPath Id="PageNumber" Expr="photos.page"/>
      </Parse>
    </Paging>
    <Fetch Url="">
      <Fetch.Url>
      <![CDATA[
        https://api.flickr.com/services/rest/?method=flickr.photos.search
		&api_key=@Model.Key
		&sort=@Utils.UrlEncode(Model.Sorting)
		&media=@(Model.MediaType)
		&text=@Model.Query
		&order=@(Model.Sorting)
		&format=json
		&nojsoncallback=2
		&extras=description,date_upload,date_taken,owner_name,views
		&per_page=@(Model.PageCursor.NextTake)
        @if(Model.PageCursor.Page != 0)
        {
          @: &page=(Model.PageNumber)
        }
      ]]>
      </Fetch.Url>
    </Fetch>	

    <Parse>
      <JsonPath Expr="photos.photo[*]">
        <Compute Id="Url" Title="Url">
          <Compute.Expr>
            http://www.flickr.com/photos/@(Model.OwnerId)/@(Model.Id)
          </Compute.Expr>
          <JsonPath Expr="id" Id="Id" Converter="String"/>
          <JsonPath Expr="owner" Id="OwnerId" Converter="String"/>
        </Compute>
      </JsonPath>
      <JsonPath Expr="photos.photo[*]">
        <JsonPath Expr="id" Id="PhotoId" Converter="String"/>
        <JsonPath Expr="title" Id="Title" Converter="String"/>
        <JsonPath Expr="description._content" Id="Description" Converter="String"/>
        <JsonPath Expr="datetaken" Id="DateTaken" Converter="DateTime"/>
        <JsonPath Expr="views" Id="Views" Converter="Int"/>
        <JsonPath Expr="ownername" Id="Owner" Converter="String"/>
        <JsonPath Expr="owner" Id="OwnerId" Converter="String"/>
	  </JsonPath>
	  <JsonPath Expr="photos.photo[*]">
		  <Compute Id="OwnerURL" Title="OwnerURL">
            <Compute.Expr>
              http://www.flickr.com/people/@(Model.OwnerId)
            </Compute.Expr>
            <JsonPath Expr="owner" Id="OwnerId" Converter="String"/>
          </Compute>
      </JsonPath>
    </Parse>
  </RestConnector>
  
  <RestConnector Id="TimelineSearch" Title="TimelineSearch">
